@page "/keycontacts"

@using OpenReferralPOV.Data
@using OpenReferralPOV.Services

@inject IOpenReferralKeyContactService ReferralService
@inject IOpenReferralOrganisationService OrgService

<h1>Key Contacts</h1>

<p>This component will return all the current key contacts for each Organisation.</p>

@if (KeyContacts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p></p>
    <table class="table">
        <thead>
            <tr>
                <th>User Email</th>
                <th>Org ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kc in KeyContacts)
            {
                <tr>
                    <td>@kc.UserEmail</td>
                    <td>@Orgs.First(x => x.Id == kc.OrgId).Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<KeyContact> KeyContacts;
    private IEnumerable<Organization> Orgs;

    protected override async Task OnInitializedAsync()
    {
        KeyContacts = await ReferralService.GetAllKeyContacts();
        Orgs = await OrgService.GetAllOrganisations();
    }
}
